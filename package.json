{
  "name": "webhook-proxy-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for webhook-proxy core and CLI",
  "scripts": {
    "dev": "pnpm --filter @webhook-proxy/core dev",
    "dev:cli": "pnpm --filter @webhook-proxy/cli dev",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @webhook-proxy/core build",
    "build:cli": "pnpm --filter webhook-proxy-cli build",
    "deploy": "pnpm --filter @webhook-proxy/core deploy",
    "publish": "pnpm --filter webhook-proxy-cli publish --access public",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "db:migrate": "pnpm --filter @webhook-proxy/core db:migrate",
    "db:migrate:local": "pnpm --filter @webhook-proxy/core db:migrate:local",
    "db:create": "pnpm --filter @webhook-proxy/core db:create"
  },
  "keywords": [
    "webhook",
    "proxy",
    "websocket",
    "sse",
    "monorepo"
  ],
  "author": "lc-cn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lc-cn/webhook-proxy.git"
  },
  "homepage": "https://github.com/lc-cn/webhook-proxy#readme",
  "bugs": {
    "url": "https://github.com/lc-cn/webhook-proxy/issues"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
